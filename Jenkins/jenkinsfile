pipeline {
    agent any
    stages {
        stage('Pull Script from Git') {
            steps {
                git(url: 'https://github.com/Sullen-ui/YC_terraform_k8s_jenkins.git', branch: 'master')
            }
        }
        stage('Run Script') {
            steps {
                script {
                    sh 'chmod +x ./Jenkins/script.sh'
                    def result = sh(script: './Jenkins/script.sh https://httpbin.org/status/200,500', returnStatus: true)
                    def responseCode = result.returnStatus
                    if (responseCode == 0) {
                        result = 'SUCCESS. Скрипт отработал и вернул HTTP-статус: 200'
                    } else {
                        result = 'FAILURE. Скрипт отработал и вернул HTTP-статус: 500'
                    }

                }
            }
        }
        stage('Send Email') {
            steps {
                emailext(
                    subject: "Результат выполнения Jenkins Job: ${currentBuild.number}",
                    body: """Результат: ${currentBuild.result}\\n"""
                            echo "Результат скрипта: ${result}"
                        """Пайплайн был запущен в : ${currentBuild.startTimeInMillis}\\n
                           Продолжительность сборки:${currentBuild.durationInMillis}\\n
                           Имя агента: ${currentBuild.builtOn}""",
                    recipientProviders: [[$class: 'DevelopersRecipientProvider']],
                    to: "fmj.kronus777@gmail.com"
        
                )
            }
        }
    }
}