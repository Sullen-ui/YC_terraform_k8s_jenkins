pipeline {
    agent any
    stages {
        stage('Pull Script from Git') {
            steps {
                git(url: 'https://github.com/Sullen-ui/YC_terraform_k8s_jenkins.git', branch: 'master')
            }
        }
        stage('Run Script') {
            steps {
                script {
                    sh 'chmod +x ./Jenkins/script.sh'
                    def response = sh(script: './Jenkins/script.sh https://httpbin.org/status/200,400,500', returnStatus: true)
                    if (response == 0) {
                        currentBuild.result = 'SUCCESS'
                    } else {
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
        stage('Send Email') {
            steps {
                emailext(
                    subject: "Результат выполнения Jenkins Job: ${currentBuild.result}",
                    body: "Результат: ${currentBuild.result}",
                    recipientProviders: [[$class: 'DevelopersRecipientProvider']],
                    to: "fmj.kronus777@gmail.com"
                )
            }
        }
    }
}